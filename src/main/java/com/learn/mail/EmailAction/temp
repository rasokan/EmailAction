public class PermutationsOfString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		printPermutations("agi", "");

	}

	public static String swapCharacter(String inputChar) {

		char firstChar = inputChar.charAt(0);
		char secondChar = inputChar.charAt(1);
		StringBuilder sb = new StringBuilder();
		sb.append(secondChar).append(firstChar).append(inputChar.substring(2));
		return sb.toString();

	}

	private static void printPermutations(String input, String output) {

		if (input.length() == 0) {

			System.out.println(output);

			return;
		}

		String smallString = input.substring(1);

		printPermutations(smallString, output.concat(new StringBuilder().append(input.charAt(0)).toString()));

		if (input.length() == 2) {

			String newInpputString = swapCharacter(input);

			printPermutations(newInpputString, output);
		}

	}

}

